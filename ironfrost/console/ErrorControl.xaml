<UserControl x:Name="errorControl" x:Class="ironfrost.ErrorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="clr-namespace:FontAwesome.WPF;assembly=FontAwesome.WPF"
             xmlns:local="clr-namespace:ironfrost"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="0" Fill="Crimson" />
        <fa:ImageAwesome Grid.Column="0" Icon="ExclamationTriangle"
                         Foreground="White"
                         Margin="10px" />
        <TextBlock Grid.Column="1"
                   TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Bold>Error</Bold>
            <LineBreak />
            <Run Text="{Binding Message, Mode=OneWay, FallbackValue ='Unknown error.'}" />
        </TextBlock>
    </Grid>
</UserControl>
