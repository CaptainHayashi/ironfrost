<UserControl x:Class="ironfrost.NullControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ironfrost"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <TextBlock TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center">
            ironfrost does not know how to use this server.
            <LineBreak />
            <LineBreak />
            To send raw messages to the server, use the
            <Bold>Messages</Bold> pane.
            <LineBreak />
            <LineBreak />
            The server <Italic>role</Italic> is
            <Run Text="{Binding Name, Mode=OneWay, FallbackValue='unknown'}" FontFamily="Consolas" />.
        </TextBlock>
    </Grid>
</UserControl>
