<Page
    x:Class="Ironfrost.Views.ConnectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ironfrost.Views"
    xmlns:model="using:Ironfrost.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock
                Style="{StaticResource PageTitleTextBlockStyle}"
                Margin="0,0,0,12">
                Connect to studio
            </TextBlock>
            <GridView x:Name="studioView" ItemsSource="{x:Bind Studios}">
                <GridView.ItemTemplate>
                    <DataTemplate x:DataType="model:Studio">
                        <StackPanel Margin="20" Width="300">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Style="{StaticResource BaseTextBlockStyle}"/>
                            <TextBlock TextWrapping="NoWrap" Style="{StaticResource BodyTextBlockStyle}">
                                <Run Text="{Binding Host}"/>:<Run Text="{Binding Port}"/>
                            </TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </StackPanel>
    </Grid>
</Page>
